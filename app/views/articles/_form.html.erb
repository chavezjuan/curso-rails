<% if @article.errors.any? %>
<ul>
  <h2>Os seguintes erros estão impedindo o artigo de ser criado:</h2>
  <% @article.errors.full_messages.each do |msg|%>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@article, :html => {class: "form-vertical", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sn-2">
          <%= f.label :title %>
        </div>
        <div class="col-sn-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Título do artigo", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sn-2">
          <%= f.label :description %>
        </div>
        <div class="col-sn-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Insira o seu texto" %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
          <label for="exampleInputFile"><br>Upload de arquivo</label>
          <input type="file" id="exampleInputFile">
          <p class="help-block">Insira documentos no formato .pdf</p>
        </div>  
      </div>

    <% end %>

    <div class="col-xs-4 col-sm-offset-2" >
      [ <%= link_to "Voltar", articles_path %> ]
    </div>  
  </div>
</div>