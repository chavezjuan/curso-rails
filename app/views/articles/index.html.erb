<h1>Listando todos os artigos</h1>
<p><%= link_to "Criar um novo artigo", new_article_path %></p>
<table border = 4>
  <tr>
    <th>Título</th>
    <th>Descrição</th>
  </tr>

  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= link_to 'Editar', edit_article_path(article) %></td>
    <td><%= link_to 'Mostrar', article_path(article) %></td>
  </tr>
  <% end %>
</table>